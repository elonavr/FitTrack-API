{
  "semi": false,
  "singleQuote": true,
  "tabWidth": 4,
  "overrides": [
    {
      "files": "*.test.js",
      "options": {
        "semi": true
      }
    },
    {
      "files": ["*.html", "legacy/**/*.js"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.{ts,tsx}",
      "options": {
        "trailingComma": "all"
      }
    }
  ]
}
